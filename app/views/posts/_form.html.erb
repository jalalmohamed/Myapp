
<%= form_with(model: [@topic, post]) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :publish, style: "display: block" %>
    <%= form.date_field :publish %>
  </div>

  <div>
    <%= form.label :tag, style: "display: block" %>
    <%= form.text_field :tags, value: post.tags.map(&:name).join(",")%>
    <br><br>
    <%= fields_for(@product_tag) do |p| %>
      <%= p.label "All tags"%>
      <%= collection_select(:tags,:id,@all_tags,:id,:name,{},{:multiple => true}) %>
    <% end %>
    <%#= render "add", product: @product %>
  </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
