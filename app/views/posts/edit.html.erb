<h1>Editing post</h1>

<%= render "form", post: @post %>

<br>
<% if params[:topic_id] %>
<div>
  <%= link_to "Back", topic_post_path([@topic, @post]) , class: "btn btn-secondary" %>
</div>
<% else %>
  <div>
    <%= link_to "Show this post", @post %> |
    <%= link_to "Back to posts", posts_path %>
  </div>
<% end %>
<p></p>