<div class="card w-75">
  <div class="card-body">
    <h5 class="card-title"><%= comment.commenter %></h5>
    <p class="card-text"><%= comment.body %></p>
    <p><%= comment.user.email %></p>
    <% if can? :update, comment %>
      <table><tr>
        <td><%= link_to "Edit Comment", edit_topic_post_comment_path(@topic,comment.post, comment), class: "btn btn-info"%></td>
        <td><%= button_to "Delete Comment", topic_post_comment_path(@topic,@post,comment), method: :delete, class: "btn btn-danger" %></td>
      </tr></table>
    <% end %>
  </div>
</div><br>
